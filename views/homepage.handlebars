{{!-- Container for dietary restrictions --}}
<div id="diet-checkboxes" class="scrollable-container1">
  <h6>Dietary Restrictions</h6>
  <input type="checkbox" id="is_vegetarian" checked>
  <label for="is_vegetarian">Vegetarian</label><br>
  
  <input type="checkbox" id="is_vegan" checked>
  <label for="is_vegan">Vegan</label><br>
  
  <input type="checkbox" id="is_gluten_free" checked>
  <label for="is_gluten_free">Gluten Free</label><br>
  
