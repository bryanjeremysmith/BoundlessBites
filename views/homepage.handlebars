{{#each restaurants as |restaurant| }}
  {{#if restaurant.is_vegetarian  }} 
    {{#if restaurant.is_vegan}}
      {{#if restaurant.is_gluten_free}}
        <div id="vegetarian_vegan_gluten_free" class="vegetarian_vegan_gluten_free_class card">
          <h2><a href="/restaurant/{{restaurant.id}}">{{restaurant.restaurant_name}}</a></h2>
          <p>Vegetarian, Vegan, Gluten Free</p>
        </div>
      {{else}}
        <div id="vegetarian_vegan" class="vegetarian_vegan_class card">
          <h2><a href="/restaurant/{{restaurant.id}}">{{restaurant.restaurant_name}}</a></h2>
          <p>Vegetarian, Vegan</p>
        </div>
      {{/if}}
    {{else}}
      {{#if restaurant.is_gluten_free}}
        <div id="vegetarian_gluten_free" class="vegetarian_gluten_free_class card">
          <h2><a href="/restaurant/{{restaurant.id}}">{{restaurant.restaurant_name}}</a></h2>
          <p>Vegetarian, Gluten Free</p>
        </div>
      {{else}}
        <div id="vegetarian" class="vegetarian_class card">
          <h2><a href="/restaurant/{{restaurant.id}}">{{restaurant.restaurant_name}}</a></h2>
          <p>Vegetarian</p>
        </div>
      {{/if}}
    {{/if}}
  {{else}}
    {{#if restaurant.is_vegan}}
      {{#if restaurant.is_gluten_free}}
        <div id="vegan_gluten_free" class="vegan_gluten_free_class card">
          <h2><a href="/restaurant/{{restaurant.id}}">{{restaurant.restaurant_name}}</a></h2>
          <p>Vegan, Gluten Free</p>
        </div>
      {{else}}
        <div id="vegan" class="vegan_class card">
          <h2><a href="/restaurant/{{restaurant.id}}">{{restaurant.restaurant_name}}</a></h2>
          <p>Vegan</p>
        </div>
      {{/if}}
    {{else}}
      {{#if restaurant.is_gluten_free}}
        <div id="gluten_free" class="gluten_free_class card">
          <h2><a href="/restaurant/{{restaurant.id}}">{{restaurant.restaurant_name}}</a></h2>
          <p>Gluten Free</p>
        </div>
      {{else}}
        <div class="card">
          <h2>No restaurants</a></h2>
          <p>Nothing matches this filter</p>
        </div>
      {{/if}}
    {{/if}}
  {{/if}}
{{/each}}


