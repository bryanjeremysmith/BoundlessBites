{{!-- Container for dietary restrictions --}}
<div id="diet-checkboxes" class="scrollable-container1">
  <h6>Dietary Restrictions</h6>
  <input type="checkbox" id="is_vegetarian">
  <label for="is_vegetarian">Vegetarian</label><br>
  
  <input type="checkbox" id="is_vegan">
  <label for="is_vegan">Vegan</label><br>
  
  <input type="checkbox" id="is_gluten_free">
  <label for="is_gluten_free">Gluten Free</label><br>
</div>

{{#each restaurants as |restaurant| }}
  {{#if restaurant.is_vegetarian  }} 
    {{#if restaurant.is_vegan}}
      {{#if restaurant.is_gluten_free}}
        <div class="vegetarian_vegan_gluten_free_class card">
          <h2><a href="/restaurant/{{restaurant.id}}">{{restaurant.restaurant_name}}</a></h2>
          <p>Vegetarian, Vegan, Gluten Free</p>
        </div>
      {{else}}
        <div class="vegetarian_vegan_class card">
          <h2><a href="/restaurant/{{restaurant.id}}">{{restaurant.restaurant_name}}</a></h2>
          <p>Vegetarian, Vegan</p>
        </div>
      {{/if}}
    {{else}}
      {{#if restaurant.is_gluten_free}}
        <div class="vegetarian_gluten_free_class card">
          <h2><a href="/restaurant/{{restaurant.id}}">{{restaurant.restaurant_name}}</a></h2>
          <p>Vegetarian, Gluten Free</p>
        </div>
      {{else}}
        <div class="vegetarian_class card">
          <h2><a href="/restaurant/{{restaurant.id}}">{{restaurant.restaurant_name}}</a></h2>
          <p>Vegetarian</p>
        </div>
      {{/if}}
    {{/if}}
  {{else}}
    {{#if restaurant.is_vegan}}
      {{#if restaurant.is_gluten_free}}
        <div class="vegan_gluten_free_class card">
          <h2><a href="/restaurant/{{restaurant.id}}">{{restaurant.restaurant_name}}</a></h2>
          <p>Vegan, Gluten Free</p>
        </div>
      {{else}}
        <div class="vegan_class card">
          <h2><a href="/restaurant/{{restaurant.id}}">{{restaurant.restaurant_name}}</a></h2>
          <p>Vegan</p>
        </div>
      {{/if}}
    {{else}}
      {{#if restaurant.is_gluten_free}}
        <div class="gluten_free_class card">
          <h2><a href="/restaurant/{{restaurant.id}}">{{restaurant.restaurant_name}}</a></h2>
          <p>Gluten Free</p>
        </div>
      {{else}}
        <div class="card">
          <h2>No restaurants</a></h2>
          <p>Nothing matches this filter</p>
        </div>
      {{/if}}
    {{/if}}
  {{/if}}
{{/each}}

<script src="/js/homepage.js"></script>